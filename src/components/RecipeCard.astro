---
interface Props {
  title: string;
  description: string;
  image?: string;
  href: string;
  cyber_concept?: string;
  cook_time?: string;
  difficulty?: string;
}

const { title, description, image, href, cyber_concept, cook_time, difficulty } = Astro.props;
---

<a href={href} class="recipe-card group block rounded-xl overflow-hidden bg-white/5 border border-white/10 hover:border-orange-500/30 transition-all duration-300">
  {image && (
    <div class="relative aspect-[16/10] overflow-hidden">
      <img 
        src={image} 
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
      {cyber_concept && (
        <span class="absolute bottom-3 left-3 px-2 py-1 text-xs rounded-full bg-orange-500/20 text-orange-300 ring-1 ring-orange-500/30">
          {cyber_concept}
        </span>
      )}
    </div>
  )}
  
  <div class="p-5">
    <h3 class="text-lg font-semibold text-white group-hover:text-orange-300 transition-colors line-clamp-2">
      {title}
    </h3>
    <p class="mt-2 text-sm text-neutral-400 line-clamp-2">
      {description}
    </p>
    
    <div class="mt-4 flex items-center gap-4 text-xs text-neutral-500">
      {cook_time && (
        <span class="flex items-center gap-1">
          <span>ðŸ”¥</span>
          {cook_time}
        </span>
      )}
      {difficulty && (
        <span class="capitalize">ðŸ“Š {difficulty}</span>
      )}
    </div>
  </div>
</a>

<style>
  .recipe-card {
    box-shadow: 0 10px 25px -10px rgba(0, 0, 0, 0.4);
  }
  
  .recipe-card:hover {
    box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.5), 0 0 30px -10px rgba(246, 105, 17, 0.15);
    transform: translateY(-4px);
  }
</style>
